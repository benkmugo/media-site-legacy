{# content \Netgen\IbexaSiteApi\API\Values\Content #}
{# location \Netgen\IbexaSiteApi\API\Values\Location #}

{% import '@ibexadesign/content/parts/slide.html.twig' as slide %}
{% import '@ibexadesign/content/parts/content_field_macros.html.twig' as content_fields %}

<div class="view-type view-type-{{ view_type }} {{ content.contentInfo.contentTypeIdentifier|replace({'_': '-'}) }} vl3">
    {{ slide.image(content) }}

    <div class="info">
        <h2 class="title"><a href={{ ibexa_path(location) }}>{{ content_fields.title(content) }}</a></h2>
    </div>
</div>
