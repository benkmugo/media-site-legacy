{# content \Netgen\IbexaSiteApi\API\Values\Content #}
{# location \Netgen\IbexaSiteApi\API\Values\Location #}

{% extends nglayouts.layoutTemplate %}

{% block content %}
    <div class="view-type view-type-{{ view_type }} ng-contact-form">
        <header class="full-page-header full-form-header">
            <div class="container">
                <h1 class="full-page-title">{{ ng_render_field(content.fields.title) }}</h1>
                {% if not content.fields.full_intro.empty %}
                    <div class="full-page-intro">
                        {{ ng_render_field(content.fields.full_intro) }}
                    </div>
                {% endif %}
            </div>
        </header>

        <div class="full-form-content">
            <div class="container">
                {{ ng_view_content(
                    content,
                    'payload',
                    {
                        params: {
                            action: path('ngsite_info_collection_ajax_submit', { formContentId: content.id }),
                            refererLocationId: location.id,
                            class: 'embed-form js-form-embed',
                        }
                    }
                ) }}
            </div>
        </div>
    </div>
{% endblock %}
