{# content \Netgen\IbexaSiteApi\API\Values\Content #}
{# location \Netgen\IbexaSiteApi\API\Values\Location #}

{% import '@ibexadesign/parts/content_field_macros.html.twig' as content_fields %}
{% import "@ibexadesign/parts/video.html.twig" as video %}

{% if not content.fields.video_file.empty or not content.fields.video_identifier.empty %}
    <div class="view-type view-type-{{ view_type }} ng-video vl3">
        {{ video.poster_slide(content, use_lazy_load|default(false), content_fields.title(content)) }}

        <div class="info">
            <h2 class="title">
                <a href={{ ibexa_path(location) }}>
                    <i class="fas fa-play-circle"></i>{{ content_fields.title(content) }}
                </a>
            </h2>
        </div>
    </div>
{% endif %}
