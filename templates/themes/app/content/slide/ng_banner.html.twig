{% import '@ibexadesign/parts/slide.html.twig' as slide %}
{% import '@ibexadesign/parts/macros.html.twig' as macros %}

{% block content %}
    <div class="view-type view-type-{{ view_type }} ng-banner vl3">
        {{ slide.image(content) }}

        <div class="info">
            <h2 class="title">
                {{ macros.content_link(content, content.fields.title.value.text) }}
            </h2>
        </div>
    </div>
{% endblock %}
