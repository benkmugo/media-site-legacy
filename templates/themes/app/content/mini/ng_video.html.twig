{# content \Netgen\IbexaSiteApi\API\Values\Content #}
{# location \Netgen\IbexaSiteApi\API\Values\Location #}

{% import '@ibexadesign/parts/content_field_macros.html.twig' as content_fields %}
{% import '@ibexadesign/parts/video.html.twig' as video %}

{% set location_path = ibexa_path(location) %}

{% if not content.fields.video_file.empty or not content.fields.video_identifier.empty %}
    <article class="view-type view-type-{{ view_type }} ng-video vl5">
        <figure class="image">
            <i class="fas fa-play article-icon" aria-hidden="true"></i>
            {{ video.poster(content, location) }}
        </figure>

        <header class="article-header">
            <h2 class="title"><a href="{{ location_path }}">{{ content_fields.title(content) }}</a></h2>
            <div class="info">
                {% include '@ibexadesign/parts/main_topic.html.twig' %}
            </div>
        </header>
    </article>
{% endif %}
